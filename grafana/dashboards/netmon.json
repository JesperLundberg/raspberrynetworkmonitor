{
  "id": null,
  "uid": "netmon-main",
  "title": "NetMon Overview",
  "tags": ["netmon"],
  "timezone": "",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5m",
  "style": "dark",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Download / Upload",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": "Netmon InfluxDB",
      "fieldConfig": {
        "defaults": {
          "unit": "Mbps",
          "min": 0,
          "custom": {
            "lineWidth": 2,
            "lineInterpolation": "smooth"
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true
        }
      },
      "targets": [
        {
          "refId": "A",
          "rawQuery": true,
          "query": "SELECT mean(\"download_mbps\") FROM \"internet_speed\" WHERE $timeFilter GROUP BY time($__interval) fill(null)"
        },
        {
          "refId": "B",
          "rawQuery": true,
          "query": "SELECT mean(\"upload_mbps\") FROM \"internet_speed\" WHERE $timeFilter GROUP BY time($__interval) fill(null)"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Ping latency",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": "Netmon InfluxDB",
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "min": 0,
          "custom": {
            "lineWidth": 2,
            "lineInterpolation": "smooth"
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true
        }
      },
      "targets": [
        {
          "refId": "A",
          "rawQuery": true,
          "query": "SELECT mean(\"average_response_ms\") FROM \"ping\" WHERE $timeFilter GROUP BY time($__interval), \"url\" fill(null)"
        }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Active Devices",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 6 },
      "datasource": "Netmon InfluxDB",
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "min": 0,
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "rawQuery": true,
          "query": "SELECT last(\"count\") FROM \"net_active_devices\" WHERE $timeFilter"
        }
      ]
    }
  ],
  "templating": { "list": [] }
}
